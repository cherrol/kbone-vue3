{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:vue/vue3-recommended",
		"prettier"
	],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": [
		"prettier"
	],
	"globals": {
		"defineAppConfig": true,
		"wx": true,
		"require": true,
		"module": true,
		"process": true,
		"__dirname": true
	},
	"settings": {
		"import/resolver": {
			"alias": {
				"map": [
					[
						"@request",
						"./src/request"
					],
					[
						"@components",
						"./src/uiux/components"
					],
					[
						"@widgets",
						"./src/uiux/widgets"
					],
					[
						"@uiux",
						"./src/uiux"
					],
					[
						"@images",
						"./src/assets/images"
					],
					[
						"@utils",
						"./src/utils"
					],
					[
						"@store",
						"./src/store"
					],
					[
						"@router",
						"./src/router"
					],
					[
						"@pages",
						"./src/pages"
					]
				]
			}
		}
	},
	"rules": {
		"semi": [
			"error",
			"always"
		],
		"prettier/prettier": "error",
		"no-unused-vars": 1,
		"no-empty": 1,
		"no-bitwise": 1
	}
}